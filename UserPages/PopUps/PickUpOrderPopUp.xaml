<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Package_System_CRUD.UserPages.PopUps.PickUpOrderPopUp">

    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Start"
        HorizontalOptions="Center">

        <Label
            HorizontalOptions="Start"
            VerticalOptions="Center"
            Text="Order:"
            TextColor="Black"
            FontSize="24"
            FontAttributes="Bold">
        </Label>

        <Label
            x:Name="OverviewLbl"
            TextColor="Black"
            FontSize="Small"
            HorizontalOptions="Start"
            VerticalOptions="Center">
        </Label>

        <Label
            x:Name="InfoLbl"
            HorizontalOptions="Center"
            FontSize="Micro"
            TextColor="DarkViolet">
        </Label>

        <HorizontalStackLayout
            VerticalOptions="End" HorizontalOptions="Center" Spacing="25">
            <Button Text="Pick Up Order" Clicked="OnPickUpButtonClicked" Margin="20,5" />
            <Button Text="Close" Clicked="OnCloseButtonClicked" Margin="20,5" />
        </HorizontalStackLayout>

    </VerticalStackLayout>

</toolkit:Popup>