<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="Package_System_CRUD.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shop="clr-namespace:Package_System_CRUD.UserPages.Shop"
    xmlns:authentication="clr-namespace:Package_System_CRUD.UserPages.Authentication"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="User">
            <ShellContent ContentTemplate="{DataTemplate authentication:MainPage}" />
        </Tab>
        <Tab Title="Shop">
            <ShellContent ContentTemplate="{DataTemplate shop:ShopPage}" />
        </Tab>
    </TabBar>

</Shell>